<% content_for :organization_banner do %>
  <div class="organization-banner" style="background-image: <%= current_organization.github_organization.geo_pattern_data_uri %>">
    <div class="container">
      <%= link_to 'Manage classroom', edit_organization_path(current_organization), class: 'btn btn-green' %>
      <h1 class="organization-name"><%= link_to current_organization.title, current_organization %></h1>
      <p class="organization-login"><%= link_to "@#{current_organization.github_organization.login}", current_organization.github_organization.html_url %></p>
    </div>
  </div>
<% end %>
